  },
  "dependencies": {
    "@timetracker/types-lib": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "mocha": {
    "spec": "tests",
    "extension": [
      "ts"
    ],
    "ignore": [
      "**/*.include.ts"
    ],
    "recursive": true,
    "asyncOnly": true,
    "exit": true,
    "timeout": 10000,
    "fullTrace": true,
    "bail": true
